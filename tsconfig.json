{
    "compilerOptions": {
        "declaration": false,
        "outDir": "./ts/",
        "module": "es2015",
        "target": "es2015",
        "allowJs": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "moduleResolution": "node",
        "types": [],
        "lib": [
            "DOM",
            "ES2018"
        ]
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
        "node_modules/**/*.test.ts",
        "node_modules/**/*.test.js",
        "**/webpack.*.js"
    ]
}
